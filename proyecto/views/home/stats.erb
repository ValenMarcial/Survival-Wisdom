<head>
<link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
<link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
<title> Home Page</title>
<link rel="stylesheet" href="account.css">
</head>
<body>
 <input type="checkbox" id="check">
 <label for="check">
   <i class="fas fa-bars" id="btn"></i>
   <i class="fas fa-times" id="cancel"></i>
 </label>
 <div class="sidebar">
   <header>Survival Wisdom</header>
   <a href="/home">
     <i class="fas fa-home"></i>
     <span>Home</span>
   </a>
   <a href="/skills">
     <i class="fas fa-fire"></i>
     <span>Skills</span>
   </a>
   <a href="/keep_it_alive">
     <i class="fas fa-bomb"></i>
     <span>Keep It Alive</span>
   </a>
   <a href="/stats" class="active">
      <i class="fas fa-award"></i>
     <span>Stats</span>
   </a>
   <a href="/about">
     <i class="far fa-question-circle"></i>
     <span>About</span>
   </a>
   <a href="/account">
     <i class="fa fa-address-card"></i>
     <span>Account</span>
   </a>
   <div class="logout">
   <a href="/login">
    <i class="fas fa-sign-out-alt"></i>
     <span>Log Out</span>
   </a>
  </div>
 </div>
<div class="frame">
</div>

<div class="overlay">
  <div class="user-info">
    <span>Statitics</span>
  </div>
  <div class="user-info-text">
  <% stat = Stat.where(user_id: current_user.id).order(days: :desc).first %>
   greatest number of days survived: <%= stat.days.div(3) %>
 <br>
  <br>
  <br>
  <% all_days = Stat.pluck(:days) %>
  <% total_days = all_days.sum %>
  <% average_days = total_days.to_f / all_days.size %>
  number of days survived on average: <%=average_days.div(3) %>
  <br>
  <br>
  <br>
  <% total_stats = Stat.count %>
  number of games played: <%=total_stats -1 %>
  </div>
</div>


</body>